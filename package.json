{
  "name": "brandverse-ecommerce",
  "version": "1.0.0",
  "description": "Full-stack e-commerce platform with React frontend and Node.js backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd blink/backend && npm run dev",
    "dev:frontend": "cd blink/frontend && npm start",
    "build": "cd blink/frontend && npm run build",
    "start": "cd blink/backend && npm start",
    "install:all": "npm install && cd blink/backend && npm install && cd ../frontend && npm install",
    "deploy": "./deploy.sh"
  },
  "keywords": ["ecommerce", "react", "nodejs", "razorpay", "supabase"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.2"
  }
}
